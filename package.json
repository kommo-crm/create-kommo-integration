{
  "name": "@kommo-crm/create-kommo-integration",
  "version": "1.0.0",
  "main": "cli/index.js",
  "bin": {
    "create-kommo-integration": "dist/cli/index.js"
  },
  "scripts": {
    "postinstall": "cd ./templates/kommo-react-integration/client && yarn install && cd ../..",
    "build": "yarn lint && rm -rf ./dist && tsc && node dist/cli/build.js",
    "dev": "yarn build && node dist/cli/index.js",
    "eslint": "eslint --quiet",
    "eslint:fix": "eslint --fix",
    "tslint": "tsc --noEmit",
    "lint:template:kri": "cd ./templates/kommo-react-integration/client && yarn lint && cd ../..",
    "lint": "concurrently --kill-others-on-fail \"yarn eslint\" \"yarn tslint\" \"yarn lint:template:kri\"",
    "prettier:fix": "prettier --write ."
  },
  "type": "module",
  "keywords": [
    "kommo",
    "kommocrm",
    "widget",
    "crm",
    "integration",
    "react",
    "typescript"
  ],
  "description": "This CLI tool helps developers quickly generate a widget project with the required configuration and dependencies for the Kommo platform. The tool provides an interactive prompt for setting up widget parameters, such as locales, locations, and support details.",
  "dependencies": {
    "boxen": "8.0.1",
    "chalk": "5.4.1",
    "commander": "13.1.0",
    "fs-extra": "11.3.0",
    "ignore": "^7.0.4",
    "inquirer": "12.3.3",
    "prettier": "3.5.1",
    "rimraf": "6.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.26.8",
    "@babel/generator": "7.26.8",
    "@babel/parser": "7.26.8",
    "@babel/template": "7.26.9",
    "@babel/traverse": "7.26.8",
    "@babel/types": "7.27.1",
    "@eslint/js": "9.27.0",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@types/babel__generator": "7.6.8",
    "@types/babel__traverse": "7.20.7",
    "@types/chalk": "2.2.4",
    "@types/commander": "2.12.5",
    "@types/fs-extra": "11.0.4",
    "@types/inquirer": "9.0.7",
    "@types/node": "22.13.14",
    "@typescript-eslint/parser": "8.32.1",
    "concurrently": "9.1.2",
    "cpx": "1.5.0",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.6.17",
    "eslint-plugin-only-var": "0.1.2",
    "eslint-plugin-postcss-modules": "2.0.0",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "^16.2.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1"
  }
}
